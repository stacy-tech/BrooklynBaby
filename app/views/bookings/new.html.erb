<!-- A view to create a new booking -->

<h1>Sitter Request Form</h1>
<p> Please use this form for regular sitter requests.</p>

<div class="row">
  <div class="col-md-5 col-md-offset-3">

    <%= form_for([current_user, @booking]) do |f| %>
      <br>
      <div class="form-group">
        <%= f.label :sitter_id %>
        <%= f.collection_select :sitter_id, Sitter.all, :id, :name  %>
      </div>
      <br>

      <br>
      <div class="form-group">
        <%= f.label :rate %>
        <%= f.number_field :rate %>
      </div>
      <br>

      <br>
      <div class="form-group">
        <%= f.label :datetime %>
        <%= f.datetime_field :datetime %>
      </div>
      <br>

      <br>
      <div class = "form-group">
        <%= f.label :total_hours %>
        <%= f.number_field :total_hours%>
      </div>
      <br>

      <br>
      <%= f.submit "Submit", class: "btn btn-primary" %>
      <br>
    <% end %>
  </div>
</div>



